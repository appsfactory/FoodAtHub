<h1>Listing foods</h1>

<table border=1>
  <tr>
    <th>Yes</th>
    <th>Content</th>
    <th>Updated At</th>
    <th>Time Ago</th>
    <th>Cheese</th>
    <th>Dessert</th>
    <th>Drinks</th>
    <th>Fruit</th>
    <th>Other</th>
    <th>Pizza</th>
    <th>Salad</th>
    <th>Sandwiches</th>
    <th>Veggies</th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%= food.yes %></td>
    <td><%= food.content %></td>
    <td><%= food.updated_at %> </td>
    <td><%= time_ago_in_words(food.updated_at) %>   </td>
    <td><%= food.cheese %> </td>
    <td><%= food.dessert %> </td>
    <td><%= food.drinks %> </td>
    <td><%= food.fruit %> </td>
    <td><%= food.other %> </td>
    <td><%= food.pizza %> </td>
    <td><%= food.salad %> </td>
    <td><%= food.sandwiches %> </td>
    <td><%= food.veggies %> </td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

