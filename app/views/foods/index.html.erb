<h1>Listing foods</h1>

<table border=1>
  <tr>
    <th>Yes</th>
    <th>Content</th>
    <th>Updated At</th>
    <th>Time Ago</th>
  </tr>
  
<% @foods = Food.chronological %>
<% @foods.each do |food| %>
  <tr>
    <td><%= food.yes %></td>
    <td><%= food.content %></td>
    <td><%= food.updated_at %> </td>
    <td><%= time_ago_in_words(food.updated_at) %>   </td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Food', new_food_path %>
